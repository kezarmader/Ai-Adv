# Use PyTorch base image with CUDA 12.1 support
FROM pytorch/pytorch:2.3.0-cuda12.1-cudnn8-runtime

# Set environment variables for compatibility and debugging
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV CUDA_LAUNCH_BLOCKING=1

# Install required system packages
RUN apt-get update && apt-get install -y \
    git wget curl build-essential \
    && apt-get clean

# Upgrade pip and install Python dependencies
RUN pip install --upgrade pip && \
    pip install --pre torch torchvision torchaudio --index-url https://download.pytorch.org/whl/nightly/cu121 && \
    pip install diffusers transformers accelerate fastapi uvicorn

# Optional: clone diffusers if you use local pipelines/models
# (you may skip this if you're using huggingface hub directly)
RUN git clone https://github.com/huggingface/diffusers.git /diffusers

# Copy application code
COPY . /app
WORKDIR /app

# Expose the port
EXPOSE 5001

# Launch FastAPI app
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "5001"]

