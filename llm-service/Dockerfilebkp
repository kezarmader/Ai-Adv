FROM debian:bullseye-slim

# Install curl & Ollama
RUN apt-get update && \
    apt-get install -y curl && \
    curl -fsSL https://ollama.com/install.sh | sh && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Expose Ollama port
EXPOSE 11434

# Start the Ollama server only
CMD ["ollama", "serve"]

